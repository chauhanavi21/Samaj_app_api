# Example .env file for backend
# Copy this file to .env and fill in your actual values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
NODE_ENV=development
PORT=3001

# ============================================================================
# JWT CONFIGURATION
# ============================================================================
# Generate a secure random string for production
# Run this in terminal to generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long-change-this

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
# URL of your frontend (for CORS and password reset emails)
FRONTEND_URL=http://localhost:8081

# ============================================================================
# ADMIN BOOTSTRAP CONFIGURATION
# ============================================================================
# Set to true to automatically create admin on first server start
ENABLE_ADMIN_BOOTSTRAP=true

# Admin account credentials (change password after first login!)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123456
ADMIN_NAME=Admin User
ADMIN_MEMBER_ID=ADMIN001

# ============================================================================
# EMAIL CONFIGURATION (Optional - for password reset & notifications)
# ============================================================================
# SMTP Server details
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false

# Email credentials
# For Gmail, use App-Specific Password: https://myaccount.google.com/apppasswords
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Sender details
EMAIL_FROM=noreply@thaliyuvasangh.com
EMAIL_FROM_NAME=Thali Yuva Sangh

# ============================================================================
# CRON JOB CONFIGURATION (Optional - for production to keep server alive)
# ============================================================================
CRON_HEALTH_CHECK_ENABLED=false
CRON_HEALTH_CHECK_URL=https://your-production-url.com/api/health

# ============================================================================
# FIREBASE CONFIGURATION
# ============================================================================
# serviceAccountKey.json file should be placed in the backend/ folder
# Download it from Firebase Console > Project Settings > Service Accounts
# DO NOT commit serviceAccountKey.json to git!

# ============================================================================
# NOTES
# ============================================================================
# 1. Never commit this file to version control
# 2. Use strong, unique values for production
# 3. Generate new JWT_SECRET for production
# 4. Change ADMIN_PASSWORD after first login
# 5. For Gmail: Enable 2FA and use App-Specific Password
# 6. Update FRONTEND_URL for production deployment
