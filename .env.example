# Backend environment variables (example)

# Server
NODE_ENV=development
PORT=3001

# Database
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>/<dbName>?retryWrites=true&w=majority

# JWT Auth
JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_SECRET
JWT_EXPIRE=30d

# Admin setup
# Comma-separated emails that should be treated as admin accounts
ADMIN_EMAILS=admin@example.com

# Enable ONLY once to create the first admin account, then set back to false
ENABLE_ADMIN_BOOTSTRAP=false
ADMIN_BOOTSTRAP_EMAIL=admin@example.com
ADMIN_BOOTSTRAP_PASSWORD=ChangeMe!123

# Optional: Email (forgot password)
# EMAIL_FROM=no-reply@example.com
# RESEND_API_KEY=
# BREVO_SMTP_KEY=
# BREVO_SMTP_USER=
# SENDGRID_API_KEY=
# MAILGUN_SMTP_LOGIN=
# MAILGUN_SMTP_PASSWORD=
# GMAIL_USER=
# GMAIL_APP_PASSWORD=
