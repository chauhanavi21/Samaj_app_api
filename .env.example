# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=3001

# ==============================================
# DATABASE
# ==============================================
MONGODB_URI=mongodb://localhost:27017/samaj_app
# OR for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/samaj_app

# ==============================================
# JWT AUTHENTICATION
# ==============================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# ==============================================
# ADMIN CONFIGURATION
# ==============================================
# Comma-separated list of emails that should be assigned admin role on signup
ADMIN_EMAILS=chauhanavi843@gmail.com,another.admin@example.com

# Admin Bootstrap - Automatically create/update admin account on server start
ENABLE_ADMIN_BOOTSTRAP=true
ADMIN_BOOTSTRAP_EMAIL=chauhanavi843@gmail.com
ADMIN_BOOTSTRAP_PASSWORD=ChangeMeAfterFirstLogin123!
ADMIN_BOOTSTRAP_NAME=Administrator
ADMIN_BOOTSTRAP_MEMBER_ID=ADMIN-001
ADMIN_BOOTSTRAP_PHONE=

# SECURITY NOTE: After first login, please:
# 1. Change the admin password in the app
# 2. Remove or update ADMIN_BOOTSTRAP_PASSWORD in this file
# 3. Consider setting ENABLE_ADMIN_BOOTSTRAP=false

# ==============================================
# EMAIL CONFIGURATION (Optional - for notifications)
# ==============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@samajapp.com

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
# Maximum file size in bytes (default: 5MB)
MAX_FILE_SIZE=5242880

# Upload directory (relative to backend folder)
UPLOAD_DIR=uploads

# ==============================================
# CORS CONFIGURATION
# ==============================================
# In production, set this to your frontend URL
# CORS_ORIGIN=https://your-frontend-domain.com

# ==============================================
# CRON JOBS (for keeping server alive)
# ==============================================
# Set to your deployed backend URL in production
BACKEND_URL=http://localhost:3001
